<h1>Edit Shop</h1>

<form action="/shops/<%=@shop.id %>" method="POST">
  <label> Name </label>
  <input type="text" name="name" value="<%=@shop.name %>"> </br>
  <label> Category </label>
  <input type="text" name="category" value="<%=@shop.category%>"> </br>

  <label> Which shop does this belong in? </label>
  <select name="item_id">
    <% current_user.items.each do |item| %>
      <option value=<%=item.id %> <%= "selected" if item.id==@shop.item.id %> ><%= item.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Update">
</form>

<a href ="/logout"> Logout here </a>